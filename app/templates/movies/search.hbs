{{title 'Search'}}

<form {{action 'search' on='submit' query=model.search}}>
    {{input type='text' value=model.search class="form-control" placeholder="Search movies"}}
</form>
<br>
Results:
<br>
<div>
    <span class="glyphicon glyphicon-{{status}}" aria-hidden="true"></span>
</div>
<br>
{{#each model.data as |movie|}}
    {{movie-info movie = movie}}
{{/each}}
