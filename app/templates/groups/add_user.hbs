{{title "Add a friend"}}

<p>add a friend to {{model.group_name}} here</p>

<div class="container">
    <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 loginbox">
        <div class="panel-body panel-pad">
            <form id="addUserForm" class="form-horizontal" role="form" {{action "addUser" username model.group_name on="submit"}}>
                <div class="input-group margT25">
						  <span class="input-group-addon">
								<i class="glyphicon glyphicon-user"></i>
						  </span>
                    {{input id="add-user-name" type="text" class="form-control" name="username" value=username placeholder="username"}}
                </div>
                <div class="form-group margT10">
                    <!-- Button -->
                    <div class="col-sm-12 controls">
                        {{input name="add-user" type="submit" class="btn-login btn btn-block btn-success"}}
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{#each model.data.value as |friend|}}
    <p>{{friend.username}}: {{friend.first_name}} {{friend.last_name}}</p>
{{/each}}