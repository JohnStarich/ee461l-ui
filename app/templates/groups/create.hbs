{{title "Create a Group"}}

<div class="container">
    <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 loginbox">
        <div class="panel-body panel-pad">
            <form id="groupForm" class="form-horizontal" role="form" {{action "createGroup" name on="submit"}}>
                <div class="input-group margT25">
						  <span class="input-group-addon">
								<i class="glyphicon glyphicon-user"></i>
						  </span>

                    {{input id="group-name" type="text" class="form-control" name="name" value=name placeholder="group name"}}

                </div>
                <div class="form-group margT10">
                    <!-- Button -->
                    <div class="col-sm-12 controls">
                        {{input name="create" type="submit" class="btn-login btn btn-block btn-success"}}
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>